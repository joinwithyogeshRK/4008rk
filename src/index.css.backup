@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --radius: 0.5rem;
  
  /* Main Colors - Based on provided color palette */
  --primary: 215 45% 47%;        /* #4A6FA5 - Blue for header/primary actions */
  --primary-foreground: 0 0% 100%;
  --secondary: 142 45% 50%;       /* #47B881 - Green for completion/success */
  --secondary-foreground: 0 0% 0%;
  --accent: 39 89% 60%;           /* #F5B041 - Yellow for highlights/warnings */
  --accent-foreground: 0 0% 0%;
  
  /* System Colors */
  --success: 142 45% 50%;         /* #47B881 - Same as secondary */
  --success-foreground: 0 0% 100%;
  --success-muted: 142 45% 90%;
  
  --warning: 39 89% 60%;          /* #F5B041 - Same as accent */
  --warning-foreground: 0 0% 0%;
  --warning-muted: 39 89% 90%;
  
  --error: 4 78% 57%;             /* #E74C3C - Red for urgent tasks/deletion */
  --error-foreground: 0 0% 100%;
  --error-muted: 4 78% 90%;
  
  --info: 215 45% 47%;            /* #4A6FA5 - Same as primary */
  --info-foreground: 0 0% 100%;
  --info-muted: 215 45% 90%;
  
  /* Surface Colors */
  --surface: 0 0% 98%;            /* #F9F9F9 - Light gray background */
  --surface-foreground: 0 0% 20%; /* #333333 - Dark gray text */
  --surface-muted: 0 0% 94%;
  
  --background: 0 0% 98%;         /* #F9F9F9 - Light gray background */
  --foreground: 0 0% 20%;         /* #333333 - Dark gray text */
  
  --card: 0 0% 100%;
  --card-foreground: 0 0% 20%;    /* #333333 - Dark gray text */
  
  --popover: 0 0% 100%;
  --popover-foreground: 0 0% 20%; /* #333333 - Dark gray text */
  
  --muted: 0 0% 94%;
  --muted-foreground: 0 0% 45%;
  
  /* Color Scales */
  --primary-50: 215 45% 97%;
  --primary-100: 215 45% 94%;
  --primary-200: 215 45% 90%;
  --primary-300: 215 45% 80%;
  --primary-400: 215 45% 60%;
  --primary-500: 215 45% 47%;     /* #4A6FA5 */
  --primary-600: 215 45% 40%;
  --primary-700: 215 45% 35%;
  --primary-800: 215 45% 30%;
  --primary-900: 215 45% 25%;
  
  --secondary-50: 142 45% 95%;
  --secondary-100: 142 45% 90%;
  --secondary-200: 142 45% 80%;
  --secondary-300: 142 45% 70%;
  --secondary-400: 142 45% 60%;
  --secondary-500: 142 45% 50%;   /* #47B881 */
  --secondary-600: 142 45% 40%;
  --secondary-700: 142 45% 35%;
  --secondary-800: 142 45% 30%;
  --secondary-900: 142 45% 25%;
  
  --accent-50: 39 89% 97%;
  --accent-100: 39 89% 92%;
  --accent-200: 39 89% 85%;
  --accent-300: 39 89% 75%;
  --accent-400: 39 89% 65%;
  --accent-500: 39 89% 60%;       /* #F5B041 */
  --accent-600: 39 89% 50%;
  --accent-700: 39 89% 40%;
  --accent-800: 39 89% 30%;
  --accent-900: 39 89% 20%;
  
  /* System Variables */
  --border: 0 0% 90%;
  --input: var(--border);
  --ring: var(--primary);
}

.dark {
  --background: 215 45% 10%;
  --foreground: 0 0% 95%;
  
  --card: 215 45% 12%;
  --card-foreground: 0 0% 95%;
  
  --popover: 215 45% 12%;
  --popover-foreground: 0 0% 95%;
  
  --primary: 215 45% 60%;        /* Lighter blue for dark mode */
  --primary-foreground: 0 0% 0%;
  
  --secondary: 142 45% 60%;      /* Lighter green for dark mode */
  --secondary-foreground: 0 0% 0%;
  
  --muted: 215 45% 20%;
  --muted-foreground: 215 45% 70%;
  
  --accent: 39 89% 65%;          /* Lighter yellow for dark mode */
  --accent-foreground: 0 0% 0%;
  
  --border: 215 45% 25%;
  --input: 215 45% 25%;
  --ring: 215 45% 60%;
  
  /* Dark Mode System Colors */
  --success: 142 45% 60%;
  --warning: 39 89% 65%;
  --error: 4 78% 65%;
  --info: 215 45% 60%;
  
  --surface: 215 45% 12%;
  --surface-foreground: 0 0% 95%;
  --surface-muted: 215 45% 18%;
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
  }
}

@layer components {
  /* Task Card Component */
  .task-card {
    @apply bg-card text-card-foreground rounded-lg shadow-md p-4 mb-3 border border-border;
  }
  
  /* Task Input Field */
  .task-input {
    @apply w-full p-3 rounded-lg border border-input bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent;
  }
  
  /* Priority Indicators */
  .priority-high {
    @apply bg-error text-error-foreground text-xs font-medium px-2 py-1 rounded-full;
  }
  
  .priority-medium {
    @apply bg-warning text-warning-foreground text-xs font-medium px-2 py-1 rounded-full;
  }
  
  .priority-low {
    @apply bg-info text-info-foreground text-xs font-medium px-2 py-1 rounded-full;
  }
  
  /* Filter Tabs */
  .filter-tab {
    @apply px-4 py-2 rounded-md text-sm font-medium transition-colors;
  }
  
  .filter-tab-active {
    @apply bg-primary text-primary-foreground;
  }
  
  .filter-tab-inactive {
    @apply bg-muted text-muted-foreground hover:bg-muted/80;
  }
  
  /* Completion Button */
  .completion-button {
    @apply h-5 w-5 rounded-full border-2 border-secondary flex items-center justify-center transition-colors;
  }
  
  .completion-button-checked {
    @apply bg-secondary text-secondary-foreground;
  }
  
  /* App Header */
  .app-header {
    @apply bg-primary text-primary-foreground p-4 shadow-md;
  }
  
  /* Bottom Navigation */
  .bottom-nav {
    @apply fixed bottom-0 left-0 right-0 bg-surface border-t border-border flex justify-around items-center p-3;
  }
  
  .bottom-nav-item {
    @apply flex flex-col items-center justify-center text-xs font-medium;
  }
  
  .bottom-nav-item-active {
    @apply text-primary;
  }
  
  .bottom-nav-item-inactive {
    @apply text-muted-foreground;
  }
  
  /* Settings Toggle */
  .settings-toggle {
    @apply relative inline-flex h-6 w-11 items-center rounded-full bg-muted transition-colors focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2;
  }
  
  .settings-toggle-active {
    @apply bg-secondary;
  }
  
  .settings-toggle-thumb {
    @apply pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow-lg ring-0 transition-transform;
  }
  
  .settings-toggle-thumb-active {
    @apply translate-x-5;
  }
  
  .settings-toggle-thumb-inactive {
    @apply translate-x-0;
  }
}

/* Custom Animations */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes slideIn {
  from { transform: translateY(20px); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.slide-in {
  animation: slideIn 0.3s ease-out;
}